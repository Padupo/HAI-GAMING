-- FUNCTIONS FOR FEATURES
local function updateFeatureButtonStates()
    -- ... (cập nhật cho các nút cũ như trước) ...
    if isFogRemoved then fogFeatureButton.Text = "Tắt Sương Mù (Đang Bật)"; fogFeatureButton.BackgroundColor3 = Color3.fromRGB(76,175,80) else fogFeatureButton.Text = "Bật Tắt Sương Mù"; fogFeatureButton.BackgroundColor3 = Color3.fromRGB(55,58,66) end
    if isFullbrightActive then fullbrightFeatureButton.Text = "Tắt Sáng Tối Đa (Đang Bật)"; fullbrightFeatureButton.BackgroundColor3 = Color3.fromRGB(76,175,80) else fullbrightFeatureButton.Text = "Bật Sáng Tối Đa"; fullbrightFeatureButton.BackgroundColor3 = Color3.fromRGB(55,58,66) end
    if isGraphicsOptimized then optimizeGraphicsButton.Text = "Tắt Tối Ưu (Đang Bật)"; optimizeGraphicsButton.BackgroundColor3 = Color3.fromRGB(76,175,80) else optimizeGraphicsButton.Text = "Bật Tối Ưu Đồ Họa"; optimizeGraphicsButton.BackgroundColor3 = Color3.fromRGB(55,58,66) end
    if isClickTeleportActive then clickTeleportButton.Text = "Tắt D.Chuyển Click (Bật)"; clickTeleportButton.BackgroundColor3 = Color3.fromRGB(76,175,80) else clickTeleportButton.Text = "Bật Dịch Chuyển Click"; clickTeleportButton.BackgroundColor3 = Color3.fromRGB(55,58,66) end

    -- Cập nhật cho các nút mới
    if isFlyActive then flyButton.Text = "Tắt Chế Độ Bay (Bật)"; flyButton.BackgroundColor3 = Color3.fromRGB(76,175,80) else flyButton.Text = "Bật Chế Độ Bay"; flyButton.BackgroundColor3 = Color3.fromRGB(55,58,66) end
    if isNoClipActive then noClipButton.Text = "Tắt Xuyên Tường (Bật)"; noClipButton.BackgroundColor3 = Color3.fromRGB(76,175,80) else noClipButton.Text = "Bật Đi Xuyên Tường"; noClipButton.BackgroundColor3 = Color3.fromRGB(55,58,66) end
    if isPlayerESPActive then playerESPButton.Text = "Tắt ESP Người Chơi (Bật)"; playerESPButton.BackgroundColor3 = Color3.fromRGB(76,175,80) else playerESPButton.Text = "Bật ESP Người Chơi"; playerESPButton.BackgroundColor3 = Color3.fromRGB(55,58,66) end
end

-- ... (Các hàm apply/restore/toggle cho Fog, Fullbright, Optimize, ClickTeleport như trước) ...
local function applyFogSettings() Lighting.FogEnd=1e10; Lighting.FogStart=1e10; Lighting.FogColor=Color3.new(1,1,1) end
local function restoreFogSettings() Lighting.FogEnd=originalFogEnd; Lighting.FogStart=originalFogStart; Lighting.FogColor=originalFogColor end
local function toggleFogFeature() isFogRemoved=not isFogRemoved; if isFogRemoved then applyFogSettings(); StarterGui:SetCore("SendNotification",{Title="Tắt Sương Mù",Text="Đã kích hoạt!",Duration=2}) else restoreFogSettings(); StarterGui:SetCore("SendNotification",{Title="Tắt Sương Mù",Text="Đã hủy kích hoạt.",Duration=2}) end; updateFeatureButtonStates() end
local function applyFullbrightSettings() Lighting.Ambient=Color3.new(1,1,1); Lighting.ColorShift_Bottom=Color3.new(1,1,1); Lighting.ColorShift_Top=Color3.new(1,1,1) end
local function restoreFullbrightSettings() Lighting.Ambient=originalAmbient; Lighting.ColorShift_Bottom=originalColorShift_Bottom; Lighting.ColorShift_Top=originalColorShift_Top end
local function toggleFullbrightFeature() isFullbrightActive=not isFullbrightActive; if isFullbrightActive then applyFullbrightSettings(); StarterGui:SetCore("SendNotification",{Title="Sáng Tối Đa",Text="Đã kích hoạt!",Duration=2}) else restoreFullbrightSettings(); StarterGui:SetCore("SendNotification",{Title="Sáng Tối Đa",Text="Đã hủy kích hoạt.",Duration=2}) end; updateFeatureButtonStates() end
local function applyOptimizeSettings() Lighting.GlobalShadows=false; Lighting.Brightness=math.max(0.3,originalBrightness*0.8); Lighting.EnvironmentDiffuseScale=math.max(0,originalEnvDiffuseScale*0.5); Lighting.EnvironmentSpecularScale=math.max(0,originalEnvSpecularScale*0.5) end
local function restoreOptimizeSettings() Lighting.GlobalShadows=originalGlobalShadows; Lighting.Brightness=originalBrightness; Lighting.EnvironmentDiffuseScale=originalEnvDiffuseScale; Lighting.EnvironmentSpecularScale=originalEnvSpecularScale end
local function toggleOptimizeFeature() isGraphicsOptimized=not isGraphicsOptimized; if isGraphicsOptimized then applyOptimizeSettings(); StarterGui:SetCore("SendNotification",{Title="Tối Ưu Đồ Họa",Text="Đã kích hoạt!",Duration=2}) else restoreOptimizeSettings(); StarterGui:SetCore("SendNotification",{Title="Tối Ưu Đồ Họa",Text="Đã hủy kích hoạt.",Duration=2}) end; updateFeatureButtonStates() end
local function toggleClickTeleportFeature() isClickTeleportActive = not isClickTeleportActive; if isClickTeleportActive then StarterGui:SetCore("SendNotification", {Title="Dịch Chuyển Click", Text="Đã bật! Giữ LeftAlt + Click trái.", Duration=3}) else StarterGui:SetCore("SendNotification", {Title="Dịch Chuyển Click", Text="Đã tắt.", Duration=2}) end; updateFeatureButtonStates() end


-- FLY FUNCTION (MỚI)
local function toggleFlyFeature()
    isFlyActive = not isFlyActive
    local character = LocalPlayer.Character
    local humanoid = character and character:FindFirstChildOfClass("Humanoid")
    local hrp = character and character:FindFirstChild("HumanoidRootPart")

    if isFlyActive then
        if humanoid and hrp then
            humanoid.PlatformStand = true -- Giúp nhân vật không bị ảnh hưởng bởi trọng lực
            flyBodyForce = Instance.new("BodyForce")
            flyBodyForce.Force = Vector3.new(0, humanoid:GetMass() * workspace.Gravity * 0.95, 0) -- Chống lại trọng lực
            flyBodyForce.Parent = hrp

            flyBodyGyro = Instance.new("BodyGyro")
            flyBodyGyro.MaxTorque = Vector3.new(math.huge, math.huge, math.huge)
            flyBodyGyro.CFrame = hrp.CFrame
            flyBodyGyro.Parent = hrp
            StarterGui:SetCore("SendNotification", {Title="Chế Độ Bay", Text="Đã bật! Dùng W/A/S/D, Space/LCtrl.", Duration=3})
        else
            isFlyActive = false -- Không thể kích hoạt nếu không có humanoid/hrp
             StarterGui:SetCore("SendNotification", {Title="Chế Độ Bay", Text="Lỗi: Không tìm thấy nhân vật.", Duration=3})
        end
    else
        if humanoid then humanoid.PlatformStand = false end
        if flyBodyForce then flyBodyForce:Destroy(); flyBodyForce = nil end
        if flyBodyGyro then flyBodyGyro:Destroy(); flyBodyGyro = nil end
        StarterGui:SetCore("SendNotification", {Title="Chế Độ Bay", Text="Đã tắt.", Duration=2})
    end
    updateFeatureButtonStates()
end

-- NOCLIP FUNCTION (MỚI)
local function setPartsNoCollide(character, noCollide)
    if not character then return end
    for _, part in ipairs(character:GetDescendants()) do
        if part:IsA("BasePart") then
            part.CanCollide = not noCollide
        end
    end
end

local function toggleNoClipFeature()
    isNoClipActive = not isNoClipActive
    local character = LocalPlayer.Character
    local humanoid = character and character:FindFirstChildOfClass("Humanoid")

    if isNoClipActive then
        if humanoid then
            humanoid.PlatformStand = true -- Giúp đi xuyên tường dễ hơn
            setPartsNoCollide(character, true)
            StarterGui:SetCore("SendNotification", {Title="Đi Xuyên Tường", Text="Đã bật!", Duration=2})

            -- Vô hiệu hóa va chạm với các part mới được thêm vào nhân vật (ví dụ: tool)
            if not noClipConnections["CharacterChildAdded"] then
                 noClipConnections["CharacterChildAdded"] = character.ChildAdded:Connect(function(child)
                    if isNoClipActive and child:IsA("BasePart") then
                        child.CanCollide = false
                    elseif isNoClipActive and child:IsA("Accessory") or child:IsA("Tool") then
                         task.wait() -- Chờ handle được thêm
                         for _,p in ipairs(child:GetDescendants()) do
                            if p:IsA("BasePart") then p.CanCollide = false end
                         end
                    end
                end)
            end
        else
             isNoClipActive = false
             StarterGui:SetCore("SendNotification", {Title="Đi Xuyên Tường", Text="Lỗi: Không tìm thấy nhân vật.", Duration=3})
        end
    else
        if humanoid then humanoid.PlatformStand = false end
        setPartsNoCollide(character, false)
        -- Ngắt kết nối sự kiện
        if noClipConnections["CharacterChildAdded"] then
            noClipConnections["CharacterChildAdded"]:Disconnect()
            noClipConnections["CharacterChildAdded"] = nil
        end
        StarterGui:SetCore("SendNotification", {Title="Đi Xuyên Tường", Text="Đã tắt.", Duration=2})
    end
    updateFeatureButtonStates()
end

-- PLAYER ESP FUNCTION (MỚI - Cơ bản)
local function createOrUpdateESP(player)
    local character = player.Character
    if not character or player == LocalPlayer then
        if espBillboardGuis[player] then
            espBillboardGuis[player]:Destroy()
            espBillboardGuis[player] = nil
        end
        return
    end

    local head = character:FindFirstChild("Head")
    if not head then
        if espBillboardGuis[player] then
            espBillboardGuis[player]:Destroy()
            espBillboardGuis[player] = nil
        end
        return
    end

    local gui = espBillboardGuis[player]
    if not gui then
        gui = Instance.new("BillboardGui")
        gui.Name = "PlayerESP"
        gui.Adornee = head
        gui.Size = UDim2.new(0, 150, 0, 50)
        gui.StudsOffset = Vector3.new(0, 2, 0)
        gui.AlwaysOnTop = true
        gui.ResetOnSpawn = false

        local frame = Instance.new("Frame")
        frame.Size = UDim2.new(1,0,1,0)
        frame.BackgroundTransparency = 0.7
        frame.BackgroundColor3 = Color3.fromRGB(0,0,0)
        frame.BorderSizePixel = 0
        local corner = Instance.new("UICorner"); corner.CornerRadius = UDim.new(0,5); corner.Parent = frame
        frame.Parent = gui

        local nameLabel = Instance.new("TextLabel")
        nameLabel.Name = "NameLabel"
        nameLabel.Size = UDim2.new(1, -4, 0.5, 0)
        nameLabel.Position = UDim2.new(0,2,0,0)
        nameLabel.BackgroundTransparency = 1
        nameLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
        nameLabel.Font = Enum.Font.SourceSansSemibold
        nameLabel.TextSize = 14
        nameLabel.TextXAlignment = Enum.TextXAlignment.Left
        nameLabel.Parent = frame

        local distLabel = Instance.new("TextLabel")
        distLabel.Name = "DistanceLabel"
        distLabel.Size = UDim2.new(1, -4, 0.5, 0)
        distLabel.Position = UDim2.new(0,2,0.5,0)
        distLabel.BackgroundTransparency = 1
        distLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
        distLabel.Font = Enum.Font.SourceSans
        distLabel.TextSize = 12
        distLabel.TextXAlignment = Enum.TextXAlignment.Left
        distLabel.Parent = frame

        espBillboardGuis[player] = gui
        gui.Parent = player.Character -- Hoặc CoreGui nếu muốn chắc chắn
    end

    -- Cập nhật thông tin
    local nameLabel = gui.Frame.NameLabel
    local distLabel = gui.Frame.DistanceLabel
    nameLabel.Text = player.DisplayName
    if LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("Head") then
        local distance = (LocalPlayer.Character.Head.Position - head.Position).Magnitude
        distLabel.Text = string.format("%.1fm", distance)
    else
        distLabel.Text = "---m"
    end

    -- Thay đổi màu frame dựa trên team (nếu có)
    if player.TeamColor then
        gui.Frame.BackgroundColor3 = player.TeamColor.Color
    else
        gui.Frame.BackgroundColor3 = Color3.fromRGB(0,0,0)
    end
end

local function clearAllESP()
    for player, gui in pairs(espBillboardGuis) do
        if gui then gui:Destroy() end
    end
    espBillboardGuis = {}
end

local function togglePlayerESPFeature()
    isPlayerESPActive = not isPlayerESPActive
    if isPlayerESPActive then
        StarterGui:SetCore("SendNotification", {Title="ESP Người Chơi", Text="Đã bật!", Duration=2})
        for _, player in ipairs(Players:GetPlayers()) do
            createOrUpdateESP(player)
        end
    else
        clearAllESP()
        StarterGui:SetCore("SendNotification", {Title="ESP Người Chơi", Text="Đã tắt.", Duration=2})
    end
    updateFeatureButtonStates()
end

-- MOVEMENT SPEED FUNCTIONS (MỚI)
local function getHumanoid()
    return LocalPlayer.Character and LocalPlayer.Character:FindFirstChildOfClass("Humanoid")
end

local function updateOriginalSpeeds() -- Gọi khi humanoid xuất hiện
    local humanoid = getHumanoid()
    if humanoid then
        if originalWalkSpeed == 16 then originalWalkSpeed = humanoid.WalkSpeed end -- Chỉ set nếu chưa có giá trị gốc thực
        if originalJumpPower == 50 then originalJumpPower = humanoid.JumpPower end
        if not originalJumpHeight then originalJumpHeight = humanoid.JumpHeight end

        walkSpeedInput.PlaceholderText = "Tốc độ (hiện tại: "..string.format("%.1f", humanoid.WalkSpeed)..")"
        jumpPowerInput.PlaceholderText = "Sức nhảy (hiện tại: "..string.format("%.0f", humanoid.JumpPower)..")"
    end
end
if getHumanoid() then updateOriginalSpeeds() else LocalPlayer.CharacterAdded:Connect(updateOriginalSpeeds) end


walkSpeedInput.FocusLost:Connect(function(enterPressed)
    if enterPressed then
        local humanoid = getHumanoid()
        if humanoid then
            local newSpeed = tonumber(walkSpeedInput.Text)
            if newSpeed and newSpeed > 0 then
                humanoid.WalkSpeed = newSpeed
                StarterGui:SetCore("SendNotification", {Title="Tốc Độ Chạy", Text="Đã đặt thành: " .. newSpeed, Duration=2})
                walkSpeedInput.PlaceholderText = "Tốc độ (hiện tại: "..string.format("%.1f", humanoid.WalkSpeed)..")"
            elseif walkSpeedInput.Text == "" then -- Khôi phục
                humanoid.WalkSpeed = originalWalkSpeed
                StarterGui:SetCore("SendNotification", {Title="Tốc Độ Chạy", Text="Đã khôi phục về: " .. originalWalkSpeed, Duration=2})
                walkSpeedInput.PlaceholderText = "Tốc độ (hiện tại: "..string.format("%.1f", humanoid.WalkSpeed)..")"
            else
                StarterGui:SetCore("SendNotification", {Title="Lỗi", Text="Giá trị tốc độ không hợp lệ.", Duration=2})
            end
            walkSpeedInput.Text = "" -- Xóa input sau khi xử lý
        end
    end
end)

jumpPowerInput.FocusLost:Connect(function(enterPressed)
    if enterPressed then
        local humanoid = getHumanoid()
        if humanoid then
            local newPower = tonumber(jumpPowerInput.Text)
            if newPower and newPower >= 0 then
                humanoid.JumpPower = newPower
                -- humanoid.JumpHeight = newPower -- Nếu bạn muốn kiểm soát JumpHeight trực tiếp
                StarterGui:SetCore("SendNotification", {Title="Sức Nhảy", Text="Đã đặt thành: " .. newPower, Duration=2})
                jumpPowerInput.PlaceholderText = "Sức nhảy (hiện tại: "..string.format("%.0f", humanoid.JumpPower)..")"
            elseif jumpPowerInput.Text == "" then -- Khôi phục
                humanoid.JumpPower = originalJumpPower
                StarterGui:SetCore("SendNotification", {Title="Sức Nhảy", Text="Đã khôi phục về: " .. originalJumpPower, Duration=2})
                jumpPowerInput.PlaceholderText = "Sức nhảy (hiện tại: "..string.format("%.0f", humanoid.JumpPower)..")"
            else
                StarterGui:SetCore("SendNotification", {Title="Lỗi", Text="Giá trị sức nhảy không hợp lệ.", Duration=2})
            end
            jumpPowerInput.Text = ""
        end
    end
end)


-- UI Interaction Logic
mainFrame.Visible = false
toggleUiButton.MouseButton1Click:Connect(function() mainFrame.Visible = not mainFrame.Visible end)

-- Connect Feature Button Clicks
fogFeatureButton.MouseButton1Click:Connect(toggleFogFeature)
fullbrightFeatureButton.MouseButton1Click:Connect(toggleFullbrightFeature)
optimizeGraphicsButton.MouseButton1Click:Connect(toggleOptimizeFeature)
clickTeleportButton.MouseButton1Click:Connect(toggleClickTeleportFeature)
flyButton.MouseButton1Click:Connect(toggleFlyFeature)               -- MỚI
noClipButton.MouseButton1Click:Connect(toggleNoClipFeature)         -- MỚI
playerESPButton.MouseButton1Click:Connect(togglePlayerESPFeature)   -- MỚI

-- Keybinds and Input Handling
UserInputService.InputBegan:Connect(function(input, gameProcessedEvent)
    if gameProcessedEvent and input.UserInputType ~= Enum.UserInputType.MouseButton1 then return end

    if input.KeyCode == Enum.KeyCode.F1 then mainFrame.Visible = not mainFrame.Visible end

    -- Click Teleport Logic
    if isClickTeleportActive and input.UserInputType == Enum.UserInputType.MouseButton1 and (UserInputService:IsKeyDown(Enum.KeyCode.LeftAlt) or UserInputService:IsKeyDown(Enum.KeyCode.RightAlt)) then
        local mouse = LocalPlayer:GetMouse()
        if mouse.Target and mouse.Hit then
            local char = LocalPlayer.Character; local hrp = char and char:FindFirstChild("HumanoidRootPart")
            if hrp then hrp.CFrame = CFrame.new(mouse.Hit.Position + Vector3.new(0,3,0)); --[[Notif]] end
        end
    end
end)

-- Persistent checks (Lighting)
-- ... (như trước) ...
Lighting:GetPropertyChangedSignal("FogEnd"):Connect(function() if isFogRemoved then applyFogSettings() end end)
Lighting:GetPropertyChangedSignal("FogStart"):Connect(function() if isFogRemoved then applyFogSettings() end end)
Lighting:GetPropertyChangedSignal("FogColor"):Connect(function() if isFogRemoved then applyFogSettings() end end)
Lighting.Changed:Connect(function(property)
    if isFogRemoved and (property == "FogEnd" or property == "FogStart" or property == "FogColor") then applyFogSettings() end
    if isFullbrightActive and (property == "Ambient" or property == "ColorShift_Bottom" or property == "ColorShift_Top") then applyFullbrightSettings() end
    if isGraphicsOptimized and (property == "GlobalShadows" or property == "Brightness" or property == "EnvironmentDiffuseScale" or property == "EnvironmentSpecularScale") then applyOptimizeSettings() end
end)


-- RENDERSTEPPED FOR DYNAMIC UPDATES
local flyMoveVector = Vector3.new()
RunService.RenderStepped:Connect(function(deltaTime)
    -- FPS Counter
    local currentFps = workspace:GetRealPhysicsFPS()
    fpsLabel.Text = string.format("FPS: %.0f", currentFps)
    if currentFps < 30 then fpsLabel.TextColor3 = Color3.fromRGB(255,80,80) elseif currentFps < 55 then fpsLabel.TextColor3 = Color3.fromRGB(255,220,80) else fpsLabel.TextColor3 = Color3.fromRGB(80,255,80) end

    -- Fly Logic
    if isFlyActive and flyBodyForce and flyBodyGyro then
        local hrp = LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
        local cam = workspace.CurrentCamera
        if hrp and cam then
            flyMoveVector = Vector3.new()
            if UserInputService:IsKeyDown(Enum.KeyCode.W) then flyMoveVector = flyMoveVector + cam.CFrame.LookVector end
            if UserInputService:IsKeyDown(Enum.KeyCode.S) then flyMoveVector = flyMoveVector - cam.CFrame.LookVector end
            if UserInputService:IsKeyDown(Enum.KeyCode.A) then flyMoveVector = flyMoveVector - cam.CFrame.RightVector end
            if UserInputService:IsKeyDown(Enum.KeyCode.D) then flyMoveVector = flyMoveVector + cam.CFrame.RightVector end
            if UserInputService:IsKeyDown(Enum.KeyCode.Space) then flyMoveVector = flyMoveVector + Vector3.new(0,1,0) end
            if UserInputService:IsKeyDown(Enum.KeyCode.LeftControl) then flyMoveVector = flyMoveVector - Vector3.new(0,1,0) end

            if flyMoveVector.Magnitude > 0 then
                flyBodyForce.Force = flyMoveVector.Unit * flySpeed * 1000 -- Tăng lực để di chuyển nhanh
            else
                flyBodyForce.Force = Vector3.new(0, LocalPlayer.Character.Humanoid:GetMass() * workspace.Gravity * 0.95, 0) -- Chống trọng lực khi đứng yên
            end
            flyBodyGyro.CFrame = cam.CFrame
        end
    end

    -- NoClip Logic (Duy trì PlatformStand)
    if isNoClipActive then
        local humanoid = getHumanoid()
        if humanoid and not humanoid.PlatformStand then
            humanoid.PlatformStand = true
             setPartsNoCollide(LocalPlayer.Character, true) -- Đảm bảo các part mới (nếu có) cũng no-collide
        end
    end

    -- Player ESP Update
    if isPlayerESPActive then
        for _, player in ipairs(Players:GetPlayers()) do
            if player ~= LocalPlayer then
                createOrUpdateESP(player)
            elseif espBillboardGuis[player] then -- Xóa ESP của chính mình nếu có
                espBillboardGuis[player]:Destroy()
                espBillboardGuis[player] = nil
            end
        end
    end
end)

-- Player Added/Removed for ESP
Players.PlayerAdded:Connect(function(player)
    if isPlayerESPActive then
        createOrUpdateESP(player)
    end
     player.CharacterAdded:Connect(function(character)
        if isPlayerESPActive then createOrUpdateESP(player) end
        -- Re-apply noclip if active
        if isNoClipActive then
            task.wait(0.1) -- Chờ character load hoàn chỉnh
            setPartsNoCollide(character, true)
            local humanoid = character:FindFirstChildOfClass("Humanoid")
            if humanoid then humanoid.PlatformStand = true end
        end
        -- Update original speeds if needed
        updateOriginalSpeeds()
    end)
end)

Players.PlayerRemoving:Connect(function(player)
    if espBillboardGuis[player] then
        espBillboardGuis[player]:Destroy()
        espBillboardGuis[player] = nil
    end
end)


-- Initial Notifications
StarterGui:SetCore("SendNotification", { Title = "Bảng Điều Khiển Client", Text = "Sẵn sàng! Nhấn F1 để ẩn/hiện menu.", Duration = 5 })
screenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")
updateFeatureButtonStates()
print("Ultimate Client Enhancer V2 (VN + More Features) Loaded.")
