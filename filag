-- Services
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local StarterGui = game:GetService("StarterGui") -- Giữ lại nếu bạn vẫn muốn thông báo chào mừng

-- [[ PHẦN HIỂN THỊ FPS ĐƠN GIẢN ]]

-- ScreenGui để chứa FPS Label
local fpsScreenGui = Instance.new("ScreenGui")
fpsScreenGui.Name = "FPScounterUI"
fpsScreenGui.ResetOnSpawn = false
fpsScreenGui.DisplayOrder = 10000 -- Đảm bảo nó ở trên cùng

-- TextLabel để hiển thị FPS
local fpsLabel = Instance.new("TextLabel")
fpsLabel.Name = "FPSLabel"
fpsLabel.Size = UDim2.new(0, 100, 0, 30)         -- Kích thước label
fpsLabel.Position = UDim2.new(0, 10, 0, 10)      -- Vị trí (góc trên bên trái, padding 10px)
fpsLabel.BackgroundColor3 = Color3.fromRGB(20, 20, 20) -- Màu nền tối
fpsLabel.BackgroundTransparency = 0.3            -- Hơi trong suốt
fpsLabel.BorderColor3 = Color3.fromRGB(50, 50, 50)
fpsLabel.BorderSizePixel = 1
fpsLabel.TextColor3 = Color3.fromRGB(0, 255, 0) -- Màu chữ xanh lá
fpsLabel.Font = Enum.Font.SourceSansBold        -- Font chữ
fpsLabel.TextSize = 16
fpsLabel.Text = "FPS: ..."
fpsLabel.TextXAlignment = Enum.TextXAlignment.Center
fpsLabel.Parent = fpsScreenGui

-- Thêm bo góc cho đẹp hơn (tùy chọn)
local fpsCorner = Instance.new("UICorner")
fpsCorner.CornerRadius = UDim.new(0, 5)
fpsCorner.Parent = fpsLabel

-- Thêm ScreenGui vào PlayerGui
fpsScreenGui.Parent = Players.LocalPlayer:WaitForChild("PlayerGui")

-- Vòng lặp cập nhật FPS
RunService.RenderStepped:Connect(function(deltaTime)
    local currentFps = workspace:GetRealPhysicsFPS()
    fpsLabel.Text = string.format("FPS: %.0f", currentFps)

    -- Thay đổi màu sắc dựa trên FPS (tùy chọn)
    if currentFps < 30 then
        fpsLabel.TextColor3 = Color3.fromRGB(255, 80, 80) -- Đỏ
    elseif currentFps < 55 then
        fpsLabel.TextColor3 = Color3.fromRGB(255, 220, 80) -- Vàng
    else
        fpsLabel.TextColor3 = Color3.fromRGB(80, 255, 80) -- Xanh lá (mặc định khi tốt)
    end
end)

-- Thông báo chào mừng (nếu bạn vẫn muốn giữ lại từ các phiên bản trước)
StarterGui:SetCore(
    "SendNotification",
    {
        Title = "Chào mừng!",
        Text = "FPS Counter đã được tải.",
        Duration = 3
    }
)

print("Simple FPS Counter Loaded.")

-- [[ KẾT THÚC PHẦN HIỂN THỊ FPS ĐƠN GIẢN ]]
